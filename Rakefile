require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "commons-io"

    gem.summary = %Q{A JavaGem version of Commons IO - packaged by JavaGems (http://www.javagems.org) - original by The Apache Software Foundation (http://www.apache.org/)}



    gem.description = "Commons-IO contains utility classes, stream implementations, file filters, file comparators and endian classes."    

    gem.homepage = "http://www.javagems.org/"

    gem.authors = ["Martin Cooper - martinc@apache.org", "Matthew Hawthorne - matth@apache.org", "dIon Gillard - dion@apache.org", "Jukka Zitting - ", "Jeremias Maerki - jeremias@apache.org", "Stephen Colebourne - ", "Scott Sanders - sanders@apache.org", "Henri Yandell - bayard@apache.org", "Nicola Ken Barozzi - nicolaken@apache.org", "Niall Pemberton - ", "Jochen Wiedmann - jochen.wiedmann@gmail.com", "Rob Oxspring - roxspring@apache.org"]

    gem.email = "autobuild@javagems.org"
    gem.version = "1.4"

  

    gem.add_development_dependency "junit", "~>3.8.1"

  end
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: sudo gem install jeweler"
end

task :default => :build
